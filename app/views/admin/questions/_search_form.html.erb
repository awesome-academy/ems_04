  <div class="row">
    <div class="col-md-8">
      <%= form_tag search_admin_questions_path, method: :get do %>
        <div class="card card-primary">
          <div class="card-header">
            <h4><%= t "question_page.search_title" %></h4>
          </div>
          <div class="card-body">
            <div class="row">
              <div class="col-md-6">
                <label for="id_label_single">
                  <%= t "question_page.choose_subject" %>
                </label>
                <%= select_tag :subject_id, options_for_select(list_subject), {id: "subject-select"} %>
              </div>
              <div class="col-md-6">
                <label for="id_label_single">
                  <%= t "question_page.choose_user" %>
                </label>
                <%= select_tag :create_by, options_for_select(list_user), {id: "user-select"} %>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <label><%= t "question_page.choose_date" %></label>
                  <div class="input-group mb-3">
                    <div class="input-group-append">
                      <span class="input-group-text"><i class="far fa-calendar-alt"></i></span>
                    </div>
                    <%= text_field :search_date, :date, {id: "datepicker", class: "form-control pull-right"} %>
                  </div>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <label><%= t "question_page.question_name" %></label>
                  <div class="input-group mb-3">
                    <div class="input-group-append">
                      <span class="input-group-text"><i class="fa fa-edit"></i></span>
                    </div>
                    <%= text_field_tag :question_content, params[:question_title], class: "form-control" %>
                  </div>
                </div>
              </div>
              <div class="col-md-12">
                <%= button_tag(type: t("app_button.submit"), class: "btn btn-primary", name: nil) do %>
                  <i class="fas fa-search nav-icon"></i>
                  <%= t "app_button.search" %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
