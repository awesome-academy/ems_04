<% provide :title, t("question_page.q_title") %>
<div class="container-fluid">
  <h3 class="mb-2"><%= t "question_page.q_title" %></h3>
  <%= render "search_form", list_subject: @list_subject, list_user: @list_user %>
  <div class="row">
    <div class="col-md-12">
      <div class="card">
        <div class="card-header">
          <h3 class="d-inline-block">
            <%= t "question_page.list_question" %>
          </h3>
          <div class="card-tools">
            <%= link_to new_admin_question_path, class: "btn btn-info" do %>
              <%= t "button_app.add_new" %>
              <i class="fas fa-plus"></i>
            <% end %>
          </div>
        </div>
        <div class="card-body p-0"">
          <table class="table table-hover">
            <thead>
              <tr>
                <th><%= t "question_page.q_id" %></th>
                <th><%= t "question_page.q_content" %></th>
                <th><%= t "question_page.q_type" %></th>
                <th><%= t "question_page.q_score" %></th>
                <th><%= t "question_page.q_subject" %></th>
                <th><%= t "question_page.q_author" %></th>
                <th><%= t "question_page.q_action" %></th>
              </tr>
            </thead>
            <tbody>
              <%= render @questions %>
            </tbody>
          </table>
          <div class="digg_pagination mt-3">
            <%= will_paginate @questions %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
